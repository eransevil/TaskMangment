{
  "name": "task-management-platform",
  "version": "1.0.0",
  "description": "Extensible Task Management Platform with registry-based task types",
  "main": "dist/server.js",
"scripts": {
  "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
  "build": "tsc",
  "start": "node dist/server.js",
  "start:prod": "npm run build && npm start",
  "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
  "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
  "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts",
  "seed": "ts-node src/scripts/seed.ts"
},
  "keywords": [
    "task-management",
    "typescript",
    "express",
    "typeorm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typescript": "^5.3.3"
  }
}
